<script src="/axios.min.js"></script>
<script>

    const path = window.location.pathname
    const id = path.slice(14)


    axios.get(`/api/serial/${id}`).then(async (res) => {
        const SeasonID = res.data

        console.log(SeasonID)

        const result = res.data.files[1]
        document.getElementById('video').src = `/uploads/${result}`
        document.getElementById('backToPage').href = `/serial/${SeasonID.season._id}`


        const description = $("#description")
        await description.html("")
        description.append(`<li>${SeasonID.description}</li>`)


        const name = $("#name")
        await name.html("")
        name.append(`<li>${SeasonID.name}</li>`)


        const format = $("#format")
        await format.html("")
        format.append(`<li>${SeasonID.format}</li>`)
        format.append(`<li>${SeasonID.IMDb}</li>`)

        const timess = $("#timess")
        await timess.html("")
        timess.append(`<li>${SeasonID.videoTime}</li>`)


        
        const rating = $("#rating")
        await rating.html("")
        rating.append(`
            <li>Ushbu serialning rayting darajasi - ${SeasonID.rating}</li>
        `)
        const ratingConclusion = $("#ratingConclusion")
        await ratingConclusion.html("")
        ratingConclusion.append(`
        <div class="numbersRating" style="margin: 0 5px; padding: 3px 1px 0 3px; border: 1px solid black; border-radius: 50%;width: 40px; height: 40px; text-align:center;">1</div>
        <div class="numbersRating" style="margin: 0 5px; padding: 3px 1px 0 3px; border: 1px solid black; border-radius: 50%;width: 40px; height: 40px; text-align:center;">2</div>
        <div class="numbersRating" style="margin: 0 5px; padding: 3px 1px 0 3px; border: 1px solid black; border-radius: 50%;width: 40px; height: 40px; text-align:center;">3</div>
        <div class="numbersRating" style="margin: 0 5px; padding: 3px 1px 0 3px; border: 1px solid black; border-radius: 50%;width: 40px; height: 40px; text-align:center;">4</div>
        <div class="numbersRating" style="margin: 0 5px; padding: 3px 1px 0 3px; border: 1px solid black; border-radius: 50%;width: 40px; height: 40px; text-align:center;">5</div>
        `)

        const favourite = $("#favourite")
        await favourite.html("")
        favourite.append(`
                <li>Serial menga yoqdi ?  <i onclick="like('${SeasonID._id}')" style="font-size: 25px;" class="ti-thumb-up ml-5" > </i> ${SeasonID.like}</li>
                <li>Serial menga yoqmadi ?  <i onclick="like('${SeasonID._id}')" style="font-size: 25px;" class="ti-thumb-down ml-4" > </i> ${SeasonID.dislike}</li>
        `)


       
        document.getElementById("viewed").innerHTML = "Serial "  + SeasonID.view  +  " marotaba tomosh qilindi " 

    })
</script>